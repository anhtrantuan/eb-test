source "https://rubygems.org"

gem "rails"

# Authentication
gem "devise"

# Background processing
gem "sidekiq"

# Database
gem "pg"

# Javascript
gem "jquery-rails"
gem "therubyracer", platforms: :ruby
gem "uglifier"

# Optimization
gem "turbolinks"

# Server
gem "sinatra", require: false

# Styling
gem "sass-rails"

# Text processing
gem "coderay"

group :development, :test do
  # Debugging
  gem "byebug"
  gem "web-console"
end
